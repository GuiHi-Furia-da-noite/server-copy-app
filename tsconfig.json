{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./@types",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/@types/**/*.d.ts" 
  ],
  "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts"
  ]
}
